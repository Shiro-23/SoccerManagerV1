<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body data-spy="scroll" data-target="#myScrollspy" data-offset="20">
    <div class="nav nav-pills nav-stacked">
        <div class="container" >
            <div class="row">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Soccer Manager", "Inicio", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="row">
            <div class="navbar-collapse collapse">
                <nav class="col-sm-2" id="myScrollspy">
                    <ul class="nav nav-pills nav-stacked">
                        <li>@Html.ActionLink("Inicio", "Inicio", "Home")</li>
                        <li>@Html.ActionLink("Crear equipo", "CrearEquipo", "Equipo")</li>
                        <li>@Html.ActionLink("Registrar Jugador", "RegistrarJugador", "Jugador")</li>
                        <li>@Html.ActionLink("Registrar fecha", "RegistrarFecha", "Partido")</li>
                        <li>@Html.ActionLink("Estadios", "Estadios", "Estadio")</li>
                        <li>@Html.ActionLink("Lista de jugadores", "ListaDeJugadores", "Jugador")</li>
                        <li>@Html.ActionLink("Lista de equipo", "ListaDeEquipos", "Equipo")</li>
                        <li>@Html.ActionLink("Partido", "Partido", "Partido")</li>
                    </ul>
                    </nav>
                <div class="col-sm-10">
                    @RenderBody()
                    <hr />
                    <footer>
                        
                    </footer>
                </div>
                
        </div>
    </div>
        </div>
        </div>
   

    
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
