@model IEnumerable<SoccerManagerV1.Models.Estadio>
    @{
        ViewBag.Title = "Estadios";
    }

    <h2>Estadios</h2>

        <div>
            <table class="table table-responsive table-bordered">
                <thead>
                <th>Id</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Opciones</th>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => p.Id)</td>
                            <td>@Html.DisplayFor(m => p.Estadio1)</td>
                            <td>@Html.DisplayFor(m => p.Direccion)</td>
                            <td></td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>

<fieldset>
    <legend>Formulario registro de equipo</legend>
    @using (@Html.BeginForm("AñadirEst", "Estadio", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div>
            <button type="submit" class="btn btn-primary">Añadir</button>
        </div>
    }
